<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Authentication"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_pin_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_normal_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Normal Unlock PIN"
                        android:inputType="numberPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_alert_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_duress_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Duress (Panic) PIN"
                        android:inputType="numberPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- ### NEW: Wipe PIN Input Field ### -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_alert_triangle_24"
                    app:startIconTint="?attr/colorError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_wipe_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/wipe_pin_hint"
                        android:inputType="numberPassword"/>
                </com.google.android.material.textfield.TextInputLayout>
                
                 <Button
                    android:id="@+id/btn_save_pins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Save PINs" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ### NEW: PIN Guide Card ### -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/pin_guide_title"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                <!-- Normal PIN Guide -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pin_guide_normal_title"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/pin_guide_normal_desc"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <!-- Duress PIN Guide -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/pin_guide_duress_title"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/pin_guide_duress_desc"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <!-- Wipe PIN Guide -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/pin_guide_wipe_title"
                    android:textColor="?attr/colorError"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/pin_guide_wipe_desc"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>